<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android"
    id="com.adjust.sdk"
    version="3.4.1">

    <name>Adjust</name>
    <description>Adjust plugin for Cordova</description>
    <license>MIT License</license>
    <keywords>adjust</keywords>
    <author>adjust</author>

    <engines>
        <engine name="cordova" version=">=3.0.0" />
    </engines>

    <js-module src="www/adjust.js" name="Adjust">
        <clobbers target="Adjust" />
    </js-module>

    <!-- android -->
    <platform name="android">
        <dependency id="com.google.playservices"/>

        <config-file target="AndroidManifest.xml" parent="/manifest">
            <uses-permission android:name="android.permission.INTERNET" />
            <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
        </config-file>

        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="Adjust">
                <param name="android-package" value="com.adjust.sdk.AdjustCordova"/>
                <param name="onload" value="true" />
            </feature>
        </config-file>
        <source-file src="lib/android/sdk"
            target-dir="src/com/adjust" />
        <source-file src="src/android/com/adjust/sdk/AdjustCordova.java"
            target-dir="src/com/adjust/sdk" />
    </platform>
    <!-- ios -->
    <platform name="ios">
        <config-file target="config.xml" parent="/*">
            <feature name="Adjust">
                <param name="ios-package" value="AdjustCordova"/>
                <param name="onload" value="true" />
          </feature>
        </config-file>

        <header-file src="src/ios/AdjustCordova.h" />
        <source-file src="src/ios/AdjustCordova.m" /> 

        <header-file src="lib/ios/Adjust.h" />
        <source-file src="lib/ios/Adjust.m" /> 
        <header-file src="lib/ios/AIActivityHandler.h" />
        <source-file src="lib/ios/AIActivityHandler.m" /> 
        <header-file src="lib/ios/AIActivityKind.h" />
        <source-file src="lib/ios/AIActivityKind.m" /> 
        <header-file src="lib/ios/AIActivityPackage.h" />
        <source-file src="lib/ios/AIActivityPackage.m" /> 
        <header-file src="lib/ios/AIActivityState.h" />
        <source-file src="lib/ios/AIActivityState.m" /> 
        <header-file src="lib/ios/AIAdjustFactory.h" />
        <source-file src="lib/ios/AIAdjustFactory.m" /> 
        <header-file src="lib/ios/AILogger.h" />
        <source-file src="lib/ios/AILogger.m" /> 
        <header-file src="lib/ios/AIPackageBuilder.h" />
        <source-file src="lib/ios/AIPackageBuilder.m" /> 
        <header-file src="lib/ios/AIPackageHandler.h" />
        <source-file src="lib/ios/AIPackageHandler.m" /> 
        <header-file src="lib/ios/AIRequestHandler.h" />
        <source-file src="lib/ios/AIRequestHandler.m" /> 
        <header-file src="lib/ios/AIResponseData.h" />
        <source-file src="lib/ios/AIResponseData.m" /> 
        <header-file src="lib/ios/AITimer.h" />
        <source-file src="lib/ios/AITimer.m" /> 
        <header-file src="lib/ios/AIUtil.h" />
        <source-file src="lib/ios/AIUtil.m" /> 
        <header-file src="lib/ios/AIAdditions/NSData+AIAdditions.h" />
        <source-file src="lib/ios/AIAdditions/NSData+AIAdditions.m" /> 
        <header-file src="lib/ios/AIAdditions/NSString+AIAdditions.h" />
        <source-file src="lib/ios/AIAdditions/NSString+AIAdditions.m" /> 
        <header-file src="lib/ios/AIAdditions/UIDevice+AIAdditions.h" />
        <source-file src="lib/ios/AIAdditions/UIDevice+AIAdditions.m" /> 

        <framework src="AdSupport.framework" weak="true" />
        <framework src="iAd.framework" weak="true" />
    </platform>
</plugin>
